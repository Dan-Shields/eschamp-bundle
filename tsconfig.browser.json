{
    "compilerOptions": {
        "target": "esnext",
        "useDefineForClassFields": true,
        "module": "esnext",
        "moduleResolution": "node",
        "strict": true,
        "sourceMap": true,
        "resolveJsonModule": true,
        "isolatedModules": true,
        "esModuleInterop": true,
        "lib": ["esnext", "dom"],
        "types": ["element-plus/global"],
        "jsx": "preserve"
    },
    "include": [
        "src/dashboard/**/*.ts",
        "src/graphics/**/*.ts",
        "src/dashboard/**/*.d.ts",
        "src/graphics/**/*.d.ts",
        "src/dashboard/**/*.vue",
        "src/graphics/**/*.vue",
        "src/replicants/**/*.ts",
        "src/types/**/*.d.ts"
    ],
    "references": [{ "path": "./tsconfig.node.json" }]
}
